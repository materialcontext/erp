{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "erp",
	"version": "0.1.0",
	"identifier": "com.erp.app",
	"build": {
		"beforeDevCommand": "dx serve --port 1420",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "dx build --release",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "erp",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"shell": {
			"open": true
		},
		"sql": {
			"enabled": true
		},
		"fs": {
			"enabled": true
		}
	}
}
